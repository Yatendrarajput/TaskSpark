{
    "manifest_version": 3,
    "name": "TaskSpark",
    "version": "1.0",
    "icons": {
        "16": "icons/16.png",
        "128": "icons/128.png"
      },
    "description": "A Chrome extension for managing your task",
    "action": {
        "default_popup": "popup.html","default_size": {
      "width": 960,   
      "height": 1080 
    }
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
